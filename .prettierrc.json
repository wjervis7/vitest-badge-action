{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "tabWidth": 4,
  "overrides": [
    {
        "files": [
            "*.css",
            "*.yaml",
            "*.yml",
            "*.json"
        ],
        "options": {
            "tabWidth": 2
        }
    }
  ],
  "singleQuote": false,
  "printWidth": 200,
  "trailingComma": "none",
  "useTabs": false,
  "bracketSpacing": true
}
